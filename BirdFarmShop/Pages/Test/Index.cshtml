@model BirdFarmShop.Pages.Test.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Comment</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblComment[0].CommentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblComment[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblComment[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblComment[0].Bird)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblComment[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblComment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bird.BirdDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
        </tr>
}
    </tbody>
</table>
